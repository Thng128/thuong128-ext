{
  "name": "NimoTV Chat",
  "description": "made by HexGon",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
   "content_scripts": [
   {
     "matches": ["https://www.nimo.tv/*"],
     "exclude_matches":["https://www.nimo.tv/fragments/*"],
     "js": ["main.js"]
   }
 ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/deoCT.png",
      "32": "/images/deoCT.png",
      "48": "/images/deoCT.png",
      "128": "/images/deoCT.png"
    }
  },
  "icons": {
    "16": "/images/deoCT.png",
    "32": "/images/deoCT.png",
    "48": "/images/deoCT.png",
    "128": "/images/deoCT.png"
  }
}
